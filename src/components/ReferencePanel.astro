---
export interface Props {
  title?: string;
  author?: string;
  source?: string;
  href?: string;
}

const { title, author, source, href } = Astro.props as Props;
---

<aside
  class="font-sans my-6 rounded-md border border-neutral-300/60 bg-neutral-50/60 p-4"
>
  <header class="mb-2">
    {
      title ? (
        <div class="text-xl font-semibold text-neutral-900  mb-4">{title}</div>
      ) : null
    }
    {
      author || source ? (
        <div class="text-medium text-neutral-800/90">
          {author ? author : ''}
          {author && source ? ' Â· ' : ''}
          {source ? source : ''}
        </div>
      ) : null
    }
    {
      href ? (
        <a
          href={href}
          class="text-sm text-neutral-900 underline underline-offset-2 hover:no-underline"
          rel="noopener noreferrer"
          target="_blank"
        >
          View original
        </a>
      ) : null
    }
  </header>
  <div class="mt-4 font-sans prose prose-zinc max-w-none text-zinc-800">
    <slot />
  </div>
</aside>
