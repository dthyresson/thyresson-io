---
interface Props {
  videoId: string;
  title?: string;
  width?: string;
  height?: string;
}

const { videoId, title = "YouTube video player", width = "100%", height = "315" } = Astro.props;
---

<div class="relative w-full max-w-2xl mx-auto my-6">
  <iframe
    width={width}
    height={height}
    src={`https://www.youtube.com/embed/${videoId}`}
    title={title}
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    allowfullscreen
    class="w-full rounded-lg shadow-lg aspect-video"
  ></iframe>
</div>
