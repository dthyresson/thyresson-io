---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Image } from 'astro:assets';
import '@fontsource/zilla-slab';
import '../styles/global.css';
import ADT from '../images/ADT.jpg';
---

<header class="max-w-3xl mx-auto mb-4 py-4">
  <nav class="flex justify-between items-center border-b border-gray-200 pb-4">
    <a
      href="/"
      class="text-lg md:text-xl lg:text-2xl font-bold flex items-center"
    >
      <Image
        src={ADT}
        alt="DT"
        height={128}
        width={128}
        class="w-8 h-8 inline-block rounded-md mr-2"
      />
      <h1>David Thyresson</h1>
    </a>
    <div class="flex gap-4">
      <HeaderLink href="/">🏠 Home</HeaderLink>
      <HeaderLink href="/blog">📝 Writings</HeaderLink>
    </div>
  </nav>
</header>
