---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_IMAGE } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';
import '../../styles/global.css';
import '@fontsource/zilla-slab';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`${SITE_TITLE} | Blog`}
      description="Things I'm thinking about..."
      image={SITE_IMAGE}
    />
  </head>
  <body>
    <main class="md:max-w-2xl lg:max-w-3xl mx-auto px-4 md:px-6">
      <Header />
      <section>
        <div class="space-y-4">
          <p>
            Here you'll find my thoughts on technology, AI, and investing, along
            with some rediscovered content from my past - including recipes and
            papers from my English Comprehensive exams at Middlebury College
            ('96-'97).
          </p>
          <p class="text-sm text-gray-500 mb-8">
            Images AI generated using <a href="https://fal.ai" class="underline"
              >fal.ai</a
            > and the <a
              href="https://fal.ai/models/fal-ai/flux/schnell"
              class="underline">fal-ai/flux/schnell</a
            > model.
          </p>
        </div>
        <ul class="space-y-4">
          {
            posts.map((post) => (
              <li class="py-4 rounded-lg border border-gray-200 p-4 shadow-md">
                <a href={`/blog/${post.id}/`}>
                  {post.data.heroImage && (
                    <Image
                      width={1024}
                      height={576}
                      src={post.data.heroImage}
                      alt=""
                      class="rounded-lg shadow-lg"
                    />
                  )}
                  <h2 class="text-2xl font-bold my-2">{post.data.title}</h2>
                  <h3 class="text-lg text-gray-500 my-2">
                    {post.data.description}
                  </h3>
                  <div class="flex flex-wrap gap-2 justify-between align-middle pt-4">
                    <p class="text-sm">
                      {post.data.tags.map((tag) => (
                        <span class="inline-block bg-gray-100 text-gray-700 rounded-full px-3 py-1 text-sm mr-2 mb-2">
                          {tag}
                        </span>
                      ))}
                    </p>

                    <p class="text-sm">
                      <FormattedDate date={post.data.pubDate} />
                    </p>
                  </div>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
