---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

import { db, Music, asc, desc } from 'astro:db';

const music = await db
  .select()
  .from(Music)
  .orderBy(asc(Music.artist), desc(Music.release_year));

export const prerender = false;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Music Collection | ${SITE_TITLE}`}
      description={SITE_DESCRIPTION}
    />
  </head>
  <body>
    <main class="md:max-w-2xl lg:max-w-3xl mx-auto px-4 md:px-6">
      <Header />
      <article>
        <div class="prose text-lg text-black">
          <h1 class="text-3xl font-bold mb-6">Music Collection</h1>
          <ul class="space-y-2">
            {
              music.map((release) => (
                <li class="text-lg">
                  {release.artist} - {release.title} ({release.release_year})
                </li>
              ))
            }
          </ul>
        </div>
      </article>
      <Footer />
    </main>
  </body>
</html>
